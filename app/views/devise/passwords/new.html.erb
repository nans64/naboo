<h2>Forgot your password?</h2>

 <div class="container pt-lg">
  <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5 col-xl-5">

          <div class="card shadow zindex-100">
              <div class="card-body px-md-5 py-5">
                  <div class="text-center mb-5">
                      <h6 class="h3">Password reset</h6>
                      <p class="text-muted mb-0">Enter your email below to proceed</p>
                  </div>
                  <span class="clearfix"></span>


									<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
									  <%= render "devise/shared/error_messages", resource: resource %>

									  <div class="field">
									    <%= f.label :email, class:'control-label' %><br />
									    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address', class:'form-control' %>
									  </div>

									  <div class="actions">
									    <%= f.submit "Send me reset password instructions", class: 'btn btn-block btn-primary' %>
									  </div>
									<% end %>

									<%= render "devise/shared/links" %>
							</div>
          </div>
			</div>
  </div>
</div>